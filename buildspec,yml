version: 0.2

phases:
  install:
    runtime-versions:
      nodejs: 18
    commands:
      - echo "Installing dependencies..."
      - npm install
      - npm create vite@latest
  build:
    commands:
      - echo "Building the Vite app..."
      - npm run build
  post_build:
    commands:
      - echo "Updating files in the S3 bucket..."
      - aws s3 sync dist/my-react-codebuild/ s3://video-processing-web-s3 --delete
artifacts:
  files:
    - '**/*' # Include all files in the dist directory
  base-directory: dist # Important: Specify the build output directory

cache: # Add caching to speed up builds
  paths:
    - 'node_modules/**/*'
    - '~/.npm/**/*'